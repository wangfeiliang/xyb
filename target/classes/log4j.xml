<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="consolelog" class="org.apache.log4j.ConsoleAppender"> 
		<param name="encoding" value="UTF-8" /> 
		<layout class="org.apache.log4j.PatternLayout"> 
		   <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %m%n %p %c %t " /> 
		</layout> 
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
		   <param name="LevelMax" value="error"></param> 
		   <param name="LevelMin" value="debug"></param> 
		   <param name="AcceptOnMatch" value="true" /> 
		</filter> 
	</appender> 
	<logger name="org.zlex.spring">
		<level value="debug"></level>
	</logger>
	<root>
		<level value="error" />
		<appender-ref ref="consolelog" />
	</root>

</log4j:configuration>
